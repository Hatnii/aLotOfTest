<Page x:Class="aLotOfTests.pages.FileDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aLotOfTests.pages"
      mc:Ignorable="d" 
      Style="{DynamicResource bPage}"
      Title="FileDialog">

    <Grid>
        <Border  Style="{DynamicResource bBorder}">
            <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center">
                <TextBlock x:Name="FilePath" Text="Тут будет путь к файлу"/>
                <Button x:Name="FirstFileDialog" Content="Открытие файла" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="0,10,0,10" Click="FirstFileDialog_Click" Height="45"/>
                <TextBlock x:Name="FolderPath" Text="Тут будет путь к папке"/>
                <Button x:Name="AnotherFileDialog" Content="Путь к папке" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="0 10 0 0" Height="45" Click="AnotherFileDialog_Click"/>
                <Button x:Name="SaveSmth" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="0 10 0 0" Height="45" Click="SaveSmth_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
