<Page x:Class="aLotOfTests.pages.ArrayTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aLotOfTests.pages"
      mc:Ignorable="d" 
      Style="{DynamicResource bPage}"
      Title="ArrayTest">

    <Grid>
        <Border  Style="{DynamicResource bBorder}">
            <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" Text="Прекол" x:Name="RandomText" Height="35" Width="150" Margin="0 0 0 25"/>
                <Button x:Name="GGbutt" Content="Загрузить" Height="35" Width="125" Click="GGbutt_Click"/>
                <Button x:Name="BGbutt" Content="Выбрать случайную" Height="35" Width="125" Click="BGbutt_Click"/>
                <Button x:Name="gButt" Content="Отметить" Height="35" Width="125" Click="gButt_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
